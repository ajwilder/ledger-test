<h1>Summary for <%= day_display(@day) %></h1>

<table class="summary_table">
  <tr>
    <td>
      Transactions
    </td>
    <td>
      <%= @day.sales.count %>
    </td>
  </tr>
  <tr>
    <td>
      Total Sales
    </td>
    <td>
      $<%= total_sales(@day) %>
    </td>
  </tr>
  <tr>
    <td>
      Total Cash collected
    </td>
    <td>
      $<%= @day.closed? ? cash_received(@day) : '-' %>
    </td>
  </tr>
  <tr>
    <td>
      Discrepancy
    </td>
    <td>
      $<%= @day.closed? ? cash_discrepancy(@day) : '-' %>
    </td>
  </tr>

</table>

<table class="summary_table">
  <tr>
    <th>
      Item
    </th>
    <th>
      No. Sold
    </th>
  </tr>
  <% @item_sales.each do |item| %>
    <tr>
      <td>
        <%= item[0] %>
      </td>
      <td>
        <%= item[1] %>
      </td>
    </tr>
  <% end %>


</table>



